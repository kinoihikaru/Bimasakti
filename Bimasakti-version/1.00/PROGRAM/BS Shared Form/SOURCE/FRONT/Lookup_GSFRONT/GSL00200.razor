@inherits R_Page
@attribute [R_Page(Title = "Withholding Tax")]
@inject R_ILocalizer<Lookup_GSFrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_Grid @ref="@GridRef"
                DataSource="_viewModel.WithholdingTaxGrid"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5" 
                Height="300px">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CTAX_TYPE_DESCR" HeaderText="@_localizer["_TaxType"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_ID" HeaderText="@_localizer["_TaxId"]" Width="100px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CTAX_NAME" HeaderText="@_localizer["_TaxName"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CDESCRIPTION" HeaderText="@_localizer["_Desc"]" Width="300px"></R_GridTextColumn>
                <R_GridNumericColumn FieldName="NTAX_PERCENTAGE" Arrows="false" HeaderText="@_localizer["_TaxPersen"]" Width="100px"></R_GridNumericColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">

            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OkBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
    </R_StackLayout>

</R_StackLayout>