@inherits R_Page
@attribute [R_Page(Title = "Bank")]
@using APM00300COMMON
@using APM00300MODEL
@inject R_ILocalizer<APM00300FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width:1000px">
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_Label>@(_localizer["_Supp"])</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_Supplier_viewModel.SupplierID"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@_Supplier_viewModel.SupplierName"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Spacing="3">
        <R_ItemLayout col="3">
            <R_Grid @ref="@_SupllierBank_gridRef"
                    DataSource="@_Supplier_viewModel.SupplierBankGrid"
                    R_ConductorSource="@_SupplierBank_conductorRef"
                    R_GridType="@R_eGridType.Navigator"
                    R_ServiceGetListRecord="@SupplierBankList_ServiceGetListRecord">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(APM00330DTO.CALIAS_NAME)" HeaderText="@(_localizer["_FavName"])"></R_GridTextColumn>
                </R_GridColumns>
            </R_Grid>
        </R_ItemLayout>

        <R_ItemLayout col="9">
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_Bank"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CBANK_CODE"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               OnLostFocus="@bankCode_OnLostFocus" R_EnableAdd R_EnableEdit>
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="0">
                    <R_Lookup R_ConductorSource="@_SupplierBank_conductorRef"
                              R_Before_Open_Lookup="@Supplier_Bank_Before_Open_Lookup"
                              R_After_Open_Lookup="@Supplier_Bank_After_Open_Lookup"
                              R_EnableAdd R_EnableEdit>...</R_Lookup>
                </R_ItemLayout>
                <R_ItemLayout col="6">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CBANK_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_Currency"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="5">
                    <R_ComboBox Data="@_Supplier_viewModel.CurrencyList"
                                @bind-Value="@_Supplier_viewModel.Data.CCURRENCY_CODE"
                                PopupMaxHeight="140px"
                                ValueField="@nameof(APM00300CurrencyDTO.CCURRENCY_CODE)"
                                TextField="@nameof(APM00300CurrencyDTO.CCURRENCY_CODE_CCURRENCY_NAME)"
                                R_ConductorSource="@_SupplierBank_conductorRef" R_EnableAdd R_EnableEdit>
                    </R_ComboBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_AccountNo"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CBANK_ACCOUNT_NO"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit MaxLength="20">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_AccountName"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CBANK_ACCOUNT_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit MaxLength="50">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_FavName"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CALIAS_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit MaxLength="50">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_Branch"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="5">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CBRANCH_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit MaxLength="50">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_Addr"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="9">
                    <R_TextArea @bind-Value="@_Supplier_viewModel.Data.CADDRESS"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit>
                    </R_TextArea>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_City"])*</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CCITY_CODE"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               OnLostFocus="@cityCode_OnLostFocus"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="0">
                    <R_Lookup R_ConductorSource="@_SupplierBank_conductorRef"
                              R_Before_Open_Lookup="@Supplier_City_Before_Open_Lookup"
                              R_After_Open_Lookup="@Supplier_City_After_Open_Lookup"
                              R_EnableAdd R_EnableEdit>...</R_Lookup>
                </R_ItemLayout>
                <R_ItemLayout col="6">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CCITY_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_State"])</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CSTATE_CODE"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="6">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CSTATE_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>
            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_Country"])</R_Label>
                </R_ItemLayout>
                <R_ItemLayout col="3">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CCOUNTRY_CODE"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
                <R_ItemLayout col="6">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CCOUNTRY_NAME"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               Enabled="false">
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row>
                <R_ItemLayout col="2">
                    <R_Label>@(_localizer["_ZipCode"])</R_Label>
                </R_ItemLayout>

                <R_ItemLayout col="9">
                    <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CPOSTAL_CODE"
                               R_ConductorSource="@_SupplierBank_conductorRef"
                               R_EnableAdd R_EnableEdit>
                    </R_TextBox>
                </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row Class="justify-content-end">
                <R_ItemLayout col="9">
                    <R_StackLayout Row>
                        <R_ItemLayout col="3">
                            <R_Label>@(_localizer["_UpdateBy"])</R_Label>
                        </R_ItemLayout>

                        <R_ItemLayout col="2">
                            <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CUPDATE_BY"
                                       R_ConductorSource="@_SupplierBank_conductorRef"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="5">
                                <R_DateTimePicker @bind-Value="@_Supplier_viewModel.Data.DUPDATE_DATE"
                                       R_ConductorSource="@_SupplierBank_conductorRef"
                                       Enabled="false">
                            </R_DateTimePicker>
                        </R_ItemLayout>
                    </R_StackLayout>
                    <R_StackLayout Row>
                        <R_ItemLayout col="3">
                            <R_Label>@(_localizer["_CreateBy"])</R_Label>
                        </R_ItemLayout>

                        <R_ItemLayout col="2">
                            <R_TextBox @bind-Value="@_Supplier_viewModel.Data.CCREATE_BY"
                                       R_ConductorSource="@_SupplierBank_conductorRef"
                                       Enabled="false">
                            </R_TextBox>
                        </R_ItemLayout>
                        <R_ItemLayout col="5">
                            <R_DateTimePicker @bind-Value="@_Supplier_viewModel.Data.DCREATE_DATE"
                                         R_ConductorSource="@_SupplierBank_conductorRef"
                                         Enabled="false">
                            </R_DateTimePicker>
                        </R_ItemLayout>
                    </R_StackLayout>
                </R_ItemLayout>
            </R_StackLayout>

        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Class="mt-2">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_AddButton R_Conductor="@_SupplierBank_conductorRef"></R_AddButton>
                <R_EditButton R_Conductor="@_SupplierBank_conductorRef"></R_EditButton>
                <R_DeleteButton R_Conductor="@_SupplierBank_conductorRef"></R_DeleteButton>
            </R_ItemLayout>
            <R_ItemLayout col="6">
                <R_Label></R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_CancelButton R_Conductor="@_SupplierBank_conductorRef"></R_CancelButton>
                <R_SaveButton R_Conductor="@_SupplierBank_conductorRef"></R_SaveButton>
            </R_ItemLayout>
        </R_StackLayout>
    </R_StackLayout>
</R_StackLayout>

<R_Conductor @ref="@_SupplierBank_conductorRef"
             R_ViewModel="@_Supplier_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@SupplierBank_ServiceGetRecord"
             R_ServiceDelete="@SupplierBank_ServiceDelete"
             R_ServiceSave="@SupplierBank_ServiceSave"
             R_Validation="@SupplierBank_Validation"
             />
