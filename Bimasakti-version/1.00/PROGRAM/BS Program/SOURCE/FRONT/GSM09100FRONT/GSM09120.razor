@inherits R_Page
@attribute [R_Page(Title = "Move Product Category")]
@using GSM09100COMMON
@using GSM09100MODEL
@inject R_ILocalizer<GSM09100FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px;">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_FromProductCat"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_viewModel_MoveProduct.MoveProduct.CFROM_CATEGORY" Enabled="false"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@_viewModel_MoveProduct.MoveProduct.CFROM_CATEGORY_NAME" Enabled="false"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_ToProductCat"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @ref="@ToCategoty_TextBox" @bind-Value="@_viewModel_MoveProduct.MoveProduct.CTO_CATEGORY" OnLostFocus="@Catogory_OnLostFocus" Enabled="true"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="0">
            <R_Lookup R_Before_Open_Lookup="@Product_Before_Open_Lookup" R_After_Open_Lookup="@Product_After_Open_Lookup">...</R_Lookup>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@_viewModel_MoveProduct.MoveProduct.CTO_CATEGORY_NAME" Enabled="false"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_Grid @ref="@_gridRef"
                DataSource="@_viewModel.ProductGrid"
                R_ServiceGetListRecord="@Product_ServiceGetListRecord"
                Height="300px">
            <R_GridColumns>
                <R_GridCheckBoxSelectColumn FieldName="LSELECTED" ShowSelectAllHeader Width="100px"></R_GridCheckBoxSelectColumn>
                <R_GridTextColumn FieldName="CPRODUCT_ID" HeaderText="@_localizer["_ProductId"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CPRODUCT_NAME" HeaderText="@_localizer["_ProductName"]" Width="300px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CALIAS_ID" HeaderText="@_localizer["_AliasId"]" Width="200px"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CALIAS_NAME" HeaderText="@_localizer["_AliasName"]" Width="300px"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end mt-2">
        <R_ItemLayout>
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_ProcessBtn"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>
