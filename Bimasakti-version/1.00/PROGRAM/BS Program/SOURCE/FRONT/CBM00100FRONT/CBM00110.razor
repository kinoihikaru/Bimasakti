@inherits R_Page
@attribute [R_Page(Title = "CB System Parameter")]

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout>
            <R_Label FontColor="R_eFontColor.Primary" FontStyle="R_eFontStyle.Bold" FontSize="20px">@_localizer["_L01"]</R_Label>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_ForexGainAccount"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_TextBox @ref="_CurrencyRateType" @bind-Value="@_viewModel.SystemParameterCB.CRATETYPE_CODE" Enabled="true"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="0">
            <R_Lookup R_Before_Open_Lookup="@R_Before_Open_LookupCurrRateType"
                      R_After_Open_Lookup="@R_After_Open_LookupCurrRateType" Enabled="true">...</R_Lookup>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CDEPT_NAME"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="6">
            <R_GroupBox Title="@_localizer["_Period"]" TitleClass="text-danger">
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_Label>@_localizer["_CBLinkDate"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="5">
                        <R_DatePicker @bind-Value="@_viewModel.CBLinkDate"
                                      Enabled="true"></R_DatePicker>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_CheckBox @bind-Value="@_viewModel.SystemParameterCB.LALLOW_CANCEL_SOFT_END"
                                    Enabled="true">
                        </R_CheckBox>
                        <R_Label>@_localizer["_AllowCancelSoftClose"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
                <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
                <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
                <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>

            </R_GroupBox>
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_GroupBox Title="@_localizer["_Cheque"]" TitleClass="text-danger">
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_CheckBox @bind-Value="@_viewModel.SystemParameterCB.LINPUT_CHEQUE_DATE"
                                    Enabled="true">
                        </R_CheckBox>
                        <R_Label>@_localizer["_EnableInputChequeDueDate"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout>
                        <R_Label>@_localizer["_BankInMode"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="1"></R_ItemLayout>
                    <R_ItemLayout>
                        <R_RadioGroup Data="@_viewModel.CBANK_IN_MODE_LIST"
                                      @bind-Value="@_viewModel.SystemParameterCB.CBANK_IN_MODE"
                                      Layout="R_eRadioGroupLayout.Vertical"
                                      ValueField="Key"
                                      TextField="Value"
                                      Enabled="true">
                        </R_RadioGroup>
                    </R_ItemLayout>
                </R_StackLayout>

                <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
            </R_GroupBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="mt-2">
        <R_ItemLayout col="9">
            <R_GroupBox Title="@_localizer["_JournalSetup"]" TitleClass="text-danger">
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_Label>@_localizer["_ContraAccount"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCONTRA_ACCOUNT_NO" Enabled="true"></R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="0">
                        <R_Lookup R_Before_Open_Lookup="@R_Before_Open_LookupGLAccount"
                                  R_After_Open_Lookup="@R_After_Open_LookupContraAccount" Enabled="true">...</R_Lookup>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCONTRA_ACCOUNT_NAME"
                                   Enabled="false"></R_TextBox>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_Label>@_localizer["_ForexGainAccount"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCRDVG_ACCOUNT_NO" Enabled="true"></R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="0">
                        <R_Lookup R_Before_Open_Lookup="@R_Before_Open_LookupGLAccount"
                                  R_After_Open_Lookup="@R_After_Open_LookupForexGainAccount" Enabled="true">...</R_Lookup>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCRDVG_ACCOUNT_NAME"
                                   Enabled="false"></R_TextBox>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_Label>@_localizer["_ForexLossAccount"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="2">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCRDVL_ACCOUNT_NO" Enabled="true"></R_TextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="0">
                        <R_Lookup R_Before_Open_Lookup="@R_Before_Open_LookupGLAccount"
                                  R_After_Open_Lookup="@R_After_Open_ForexLossAccount" Enabled="true">...</R_Lookup>
                    </R_ItemLayout>
                    <R_ItemLayout col="6">
                        <R_TextBox @bind-Value="@_viewModel.SystemParameterCB.CCRDVL_ACCOUNT_NAME"
                                   Enabled="false"></R_TextBox>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_GroupBox>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
            <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
            <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
            <R_StackLayout Row><R_ItemLayout><R_Label></R_Label></R_ItemLayout></R_StackLayout>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout>
            <R_CheckBox @bind-Value="@_viewModel.SystemParameterCB.LCB_NUMBERING"
                        Enabled="true">
            </R_CheckBox>
            <R_Label>@_localizer["_DocNumByCashOrBank"]</R_Label>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_StackLayout Row Class="mt-2">
    <R_ItemLayout>
        <R_Button OnClick="BtnCreate_OnClick">@_localizer["_BtnCreate"]</R_Button>
        <R_Button OnClick="BtnCancel_OnClick">@_localizer["_BtnCancel"]</R_Button>
    </R_ItemLayout>
</R_StackLayout>
