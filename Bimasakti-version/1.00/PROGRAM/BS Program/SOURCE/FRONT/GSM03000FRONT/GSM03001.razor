@inherits R_Page
@attribute [R_Page(Title = "Print Other Charges")]
@using GSM03000MODEL.ViewModel
@using GSM03000Common.DTOs
@inject R_ILocalizer<GSM03000FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 800px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_ChargesId"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="4">
            <R_ComboBox @ref="@ChargesId_ComboBox"
                        Data="@_viewModel.OtherChargeList"
                        PopupMaxHeight="140px"
                        @bind-Value="_viewModel.Data.CCHARGES_ID_FROM"
                        ValueField="@nameof(GSM03000DTO.CCHARGES_ID)"
                        TextField="@nameof(GSM03000DTO.CCHARGES_NAME)">
            </R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout Style="width:5px">
            <R_Label>-</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_ComboBox Data="@_viewModel.OtherChargeList"
                        PopupMaxHeight="140px"
                        @bind-Value="_viewModel.Data.CCHARGES_ID_TO"
                        ValueField="@nameof(GSM03000DTO.CCHARGES_ID)"
                        TextField="@nameof(GSM03000DTO.CCHARGES_NAME)">
            </R_ComboBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_ShortBy"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="9">
            <R_RadioGroup Data="@_viewModel.ShortByList"
                        @bind-Value="_viewModel.Data.CSHORT_BY"
                        ValueField="@nameof(RadioModel.Id)"
                        TextField="@nameof(RadioModel.Text)"
                        Layout="R_eRadioGroupLayout.Horizontal">
            </R_RadioGroup>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="5">
            <R_CheckBox @bind-Value="@_viewModel.Data.LPRINT_INACTIVE"
                        >
            </R_CheckBox>
            <R_Label>@_localizer["_PrintInactiveCharges"]</R_Label>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
        <R_Button OnClick="Button_OnClickOkAsync">
            @_localizer["_PrintBtn"]
        </R_Button>
    </R_StackLayout>
</R_StackLayout>