@inherits R_Page
@attribute [R_Page(Title = "Print")]
@using GSM01500COMMON.DTOs

<R_StackLayout Style="width: 600px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>
                Centers
            </R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_ComboBox Data="@loCenterViewModel.loCenterList"
                        Value="loPrintParameter.CCENTER_CODE_FROM"
                        ValueField="@nameof(GSM01500DTO.CCENTER_CODE)"
                        TextField="@nameof(GSM01500DTO.CCENTER_NAME)"
                        ValueChanged="@((string value) => CenterCodeFromComboBoxValueChanged(value))">
            </R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_ComboBox Data="@loCenterViewModel.loCenterList"
                        Value="loPrintParameter.CCENTER_CODE_TO"
                        ValueField="@nameof(GSM01500DTO.CCENTER_CODE)"
                        TextField="@nameof(GSM01500DTO.CCENTER_NAME)"
                        ValueChanged="@((string value) => CenterCodeToComboBoxValueChanged(value))">
            </R_ComboBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_CheckBox @bind-Value="@loPrintParameter.LPRINT_DEPT">
            </R_CheckBox>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_Label>
                Print Department
            </R_Label>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_CheckBox @bind-Value="@loPrintParameter.LPRINT_INACTIVE">
            </R_CheckBox>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_Label>
                Print Inactive Center
            </R_Label>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row AlignItems="R_eAlignItems.End">
        <R_ItemLayout col="2">
            <R_Button OnClick="OnClickPrintButton">
                Print
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>