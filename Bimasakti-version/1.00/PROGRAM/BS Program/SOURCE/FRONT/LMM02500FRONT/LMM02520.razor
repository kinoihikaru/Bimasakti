@inherits R_Page
@using LMM02500COMMON;

<!-- Tenant List -->
<R_StackLayout>
    <R_StackLayout Row>

        <R_ItemLayout col="1">
            <R_Label>Tenant Group</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="2">
            <R_TextBox @bind-Value="@_viewModel.TenantGrp.CTENANT_GROUP_ID"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>

        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@_viewModel.TenantGrp.CTENANT_GROUP_NAME"
                       Enabled="false">
            </R_TextBox>
        </R_ItemLayout>

    </R_StackLayout>
    <R_Grid @ref="@_gridRef"
            DataSource="_viewModel.TenantGrid"
            Pageable
            Height="300px"
            R_ConductorSource="@_conductorRef"
            R_GridType="@R_eGridType.Navigator"
            R_ServiceGetListRecord="@Tenant_ServiceGetListRecord"
            AllowDeleteRow="false"
            AllowAddNewRow="false"
            AllowEditRow="false">

        <R_GridColumns>
            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CTENANT_ID)"
                              HeaderText="Tenant Id"
                              Width="102px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CTENANT_NAME)"
                              HeaderText="Tenant Name"
                              Width="200px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CTENANT_GROUP_NAME)"
                              HeaderText="Tenant Category"
                              Width="180px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CTENANT_TYPE_NAME)"
                              HeaderText="Tenant Type"
                              Width="160px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CUNIT_NAME)"
                              HeaderText="Units"
                              Width="110px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CPHONE1)"
                              HeaderText="Phone 1"
                              Width="135px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CEMAIL)"
                              HeaderText="Email"
                              Width="190px"
                              R_EnableAdd="false"
                              R_EnableEdit="false" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CUPDATE_BY)"
                              Width="110px"
                              HeaderText="Updated By" />

            <R_GridDateTimePickerColumn FieldName="@nameof(LMM02500TenantDTO.DUPDATE_DATE)"
                                        Width="250px"
                                        HeaderText="Updated Date" />

            <R_GridTextColumn FieldName="@nameof(LMM02500TenantDTO.CCREATE_BY)"
                              Width="110px"
                              HeaderText="Created By" />

            <R_GridDateTimePickerColumn FieldName="@nameof(LMM02500TenantDTO.DCREATE_DATE)"
                                        Width="250px"
                                        HeaderText="Created date" />

        </R_GridColumns>
    </R_Grid>
    </R_StackLayout>

    <R_StackLayout>

    <R_ItemLayout col="2">
        <R_Popup R_ConductorSource="@_conductorRef"
                 R_Before_Open_Popup="@R_Before_Open_Popup_Tenant_Move"
                 R_After_Open_Popup="@R_After_Open_Popup_Tenant_Move"
                 Enabled="@_isDataExist">
            Move
        </R_Popup>
    </R_ItemLayout>


    </R_StackLayout>

<R_Conductor @ref="@_conductorRef"
                 R_ViewModel="@_viewModel"
                 R_IsHeader
                 R_ServiceGetRecord="@Tenant_ServiceGetRecord"
                 />