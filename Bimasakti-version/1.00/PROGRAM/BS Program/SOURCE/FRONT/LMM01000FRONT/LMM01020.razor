@inherits R_Page
@inject R_ILocalizer<LMM01000FrontResources.Resources_Dummy_Class> _localizer
@using LMM01000COMMON

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label>@_localizer["_UtilityChargesId"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_ID"
                   R_ConductorSource="@_RateWG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="5">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_NAME"
                   R_ConductorSource="@_RateWG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>
<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label>@_localizer["_CurrCode"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_viewModel.Data.CCURENCY_CODE"
                   R_ConductorSource="@_RateWG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label>@_localizer["_PipeSize"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_NumericTextBox @ref="@PipeSize_NumericTextBox"
                          @bind-Value="@_viewModel.Data.NPIPE_SIZE"
                          R_ConductorSource="@_RateWG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>
    <R_ItemLayout col="1">
        <R_Label> @_localizer["_Inch"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="6" Class="me-2">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label FontColor="@R_eFontColor.Danger" Class="fw-bold">@_localizer["_Charges"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4" Class="bg-success text-center fw-bold">
                <R_Label Class="text-light">@_localizer["_Buying"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4" Class="bg-danger text-center fw-bold">
                <R_Label Class="text-light">@_localizer["_Selling"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_StandCharges"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_STANDING_CHARGE"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NSTANDING_CHARGE"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_UsageRateMode"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="8">
                <R_RadioGroup Data="@_Universal_viewModel.UsageRateModeList"
                              @bind-Value="@_viewModel.Data.CUSAGE_RATE_MODE"
                              Layout="R_eRadioGroupLayout.Horizontal"
                              ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                              TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                              R_ConductorSource="@_RateWG_conductorRef" R_EnableEdit>
                </R_RadioGroup>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_UsageChargesRate"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_USAGE_CHARGE_RATE"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Min="0" Max="100"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NUSAGE_CHARGE_RATE"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Min="0" Max="100"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_CheckBox @bind-Value="@_viewModel.Data.LUSAGE_MIN_CHARGE"
                            R_ConductorSource="@_RateWG_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_UsageMinCharges"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NUSAGE_MIN_CHARGE_AMT"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Arrows="false" Enabled="@_viewModel.Data.LUSAGE_MIN_CHARGE">
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_MaintenanceFee"]</R_Label>
                <R_Label FontSize="10px">@_localizer["_PerMonth"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NMAINTENANCE_FEE"
                                  R_ConductorSource="@_RateWG_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout col="11" Class="border p-2">
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_Label>@_localizer["_AdminFee"]</R_Label>
                        <R_Label FontSize="10px">@_localizer["_PerMonth"]</R_Label>
                    </R_ItemLayout>
                    <R_ItemLayout col="3">
                        <R_RadioGroup Data="@_Universal_viewModel.AdminFeeTypeList"
                                      Value="@_viewModel.Data.CADMIN_FEE"
                                      Layout="R_eRadioGroupLayout.Vertical"
                                      ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                                      TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                                      R_ConductorSource="@_RateWG_conductorRef" R_EnableEdit ValueChanged="@((string value) => RateWG_Admin_OnChange(value))">
                        </R_RadioGroup>
                    </R_ItemLayout>
                    <R_ItemLayout col="4">
                        <R_StackLayout Row>
                            <R_ItemLayout><R_Label></R_Label></R_ItemLayout>
                        </R_StackLayout>
                        <R_StackLayout Row>
                            <R_ItemLayout col="8">
                                <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_AMT"
                                                  R_ConductorSource="@_RateWG_conductorRef"
                                                  Min="0" Max="100"
                                                  Arrows="false" Enabled="@AdminFeePctEnable">
                                </R_NumericTextBox>
                            </R_ItemLayout>
                        </R_StackLayout>
                        <R_StackLayout Row>
                            <R_ItemLayout col="7">
                                <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_PCT"
                                                  R_ConductorSource="@_RateWG_conductorRef"
                                                  Min="0" Max="100"
                                                  Arrows="false" Enabled="@AdminFeeAmtEnable">
                                </R_NumericTextBox>
                            </R_ItemLayout>
                            <R_ItemLayout col="1">
                                <R_Label>%</R_Label>
                            </R_ItemLayout>
                        </R_StackLayout>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="4">
                        <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_TAX"
                                    R_ConductorSource="@_RateWG_conductorRef"
                                    R_EnableEdit>
                        </R_CheckBox>
                        <R_Label>@_localizer["_Taxable"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_AdminFeeFor"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_SC"
                            R_ConductorSource="@_RateWG_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_StandCharges"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_USAGE"
                            R_ConductorSource="@_RateWG_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_Usage"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_MAINTENANCE"
                            R_ConductorSource="@_RateWG_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_Maintainance"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_Grid @ref="@_RateWGDetail_gridRef"
            DataSource="@_viewModel.RateWGDetailList"
            Pageable
            R_ConductorGridSource="@_RateWGDetail_conductorRef"
            R_GridType="@R_eGridType.Batch"
            AllowAddNewRow="@EnableEdit"
            AllowEditRow="@EnableEdit"
            AllowDeleteRow="@EnableEdit"
            R_ServiceGetListRecord="@RateWGDetail_ServiceGetListRecord" Height="150px">
        <R_GridColumns>
            <R_GridNumericColumn FieldName="IUP_TO_USAGE" HeaderText="@_localizer["_UsageKwh"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridTextColumn FieldName="CUSAGE_DESC" HeaderText="@_localizer["_Desc"]" R_EnableAdd R_EnableEdit></R_GridTextColumn>
            <R_GridNumericColumn FieldName="NBUY_USAGE_CHARGE" Arrows="false" HeaderText="@_localizer["_LWBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridNumericColumn FieldName="NUSAGE_CHARGE" Arrows="false" HeaderText="@_localizer["_WBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>


<R_StackLayout Row Class="justify-content-between mt-2">
    <R_ItemLayout>
        <R_EditButton R_Conductor="@_RateWG_conductorRef"></R_EditButton>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button OnClick="@Button_OnClickPrintAsync" Enabled="@PrintBtnEnable" R_ConductorSource="@_RateWG_conductorRef">@_localizer["_PrintBtn"]</R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_CancelButton R_Conductor="@_RateWG_conductorRef"></R_CancelButton>
        <R_SaveButton R_Conductor="@_RateWG_conductorRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>

<R_Conductor @ref="@_RateWG_conductorRef"
             R_ViewModel="@_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@RateWG_ServiceGetRecord"
             R_SetHasData="@RateWG_SetHasData"
             R_ServiceSave="@RateWG_ServiceSave"
             R_SetEdit="@RateWG_SetEdit"
             R_AfterSave="@RateWG_AfterSave"
             R_BeforeEdit="@RateWG_BeforeEdit"
             R_BeforeCancel="@RateWG_BeforeCancel"
             R_SetOther="@Grid_R_SetOther"
             R_Display="@RateWG_Display"
             >
</R_Conductor>

<R_ConductorGrid @ref="@_RateWGDetail_conductorRef"
             R_ViewModel="@_viewModel"
             R_ConductorParent="@_RateWG_conductorRef"
             R_ServiceGetRecord="@RateWGDetail_ServiceGetRecord"
             R_Saving="@RateWGDetail_Saving"
             R_AfterSave="@RateWGDetail_AfterSave"
             R_ServiceSaveBatch="@RateWGDetail_ServiceSaveBatch"

             >
</R_ConductorGrid>