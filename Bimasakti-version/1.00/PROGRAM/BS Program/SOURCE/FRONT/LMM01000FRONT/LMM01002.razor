@inherits R_Page
@attribute [R_Page(Title = "Print Utility Charges")]
@using LMM01000MODEL
@using LMM01000COMMON
@inject R_ILocalizer<LMM01000FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Style="width: 700px">
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_ChargesType"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_ComboBox @ref="@Charges_Type"
                        Data="@_viewModel.RateTypeFromList"
                        PopupMaxHeight="140px"
                        @bind-Value="_viewModel.Data.CCHARGE_TYPE_FROM"
                        ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                        TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)">
            </R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>-</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_ComboBox Data="@_viewModel.RateTypeToList"
                        PopupMaxHeight="140px"
                        @bind-Value="_viewModel.Data.CCHARGE_TYPE_TO"
                        ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                        TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)">
            </R_ComboBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_SortBy"]</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_RadioGroup Data="@_viewModel.ShortByList"
                        @bind-Value="_viewModel.Data.CSHORT_BY"
                        Layout="R_eRadioGroupLayout.Horizontal"
                        ValueField="@nameof(RadioButton.Id)"
                        TextField="@nameof(RadioButton.Text)">
            </R_RadioGroup>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="7">
            <R_CheckBox @bind-Value="@_viewModel.Data.LPRINT_INACTIVE"></R_CheckBox>
            <R_Label>@_localizer["_PrintInactive"]</R_Label>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="7">
            <R_CheckBox @bind-Value="@_viewModel.Data.LPRINT_DETAIL_ACC"></R_CheckBox>
            <R_Label>@_localizer["_PrintDetail"]</R_Label>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_CancelBtn"]
            </R_Button>
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_PrintBtn"]
            </R_Button>
    </R_StackLayout>
</R_StackLayout>

