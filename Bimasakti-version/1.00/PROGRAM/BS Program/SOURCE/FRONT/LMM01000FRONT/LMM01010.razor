@inherits R_Page
@using LMM01000COMMON
@inject R_ILocalizer<LMM01000FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label>@_localizer["_UtilityChargesId"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="1">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_ID"
                   R_ConductorSource="@_RateUC_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="3" Class="me-3">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_NAME"
                   R_ConductorSource="@_RateUC_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_Label>@_localizer["_CurrCode"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_viewModel.Data.CCURENCY_CODE"
                   R_ConductorSource="@_RateUC_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="6" Class="me-4">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>Usage Rate Mode</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="8">
                <R_RadioGroup @ref="@UsageRateMode_RadioGrp"
                              Data="@_Universal_viewModel.UsageRateModeList"
                              @bind-Value="@_viewModel.Data.CUSAGE_RATE_MODE"
                              Layout="R_eRadioGroupLayout.Horizontal"
                              ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                              TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                              R_ConductorSource="@_RateUC_conductorRef" R_EnableEdit R_EnableAdd="false">
                </R_RadioGroup>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_RateType"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="7">
                <R_RadioGroup Data="@_Universal_viewModel.RateTypeList"
                              @bind-Value="@_viewModel.Data.CRATE_TYPE"
                              ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                              TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                              R_ConductorSource="@_RateUC_conductorRef"
                              Layout="R_eRadioGroupLayout.Horizontal"
                             R_EnableEdit>
                </R_RadioGroup>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>




<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Label FontColor="@R_eFontColor.Danger" Class="fw-bold">@_localizer["_Charges"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="2" Class="bg-success text-center fw-bold">
        <R_Label Class="text-light">@_localizer["_Buying"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="2" Class="bg-danger text-center fw-bold">
        <R_Label Class="text-light">@_localizer["_Selling"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="6" Class="me-4">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_StandCharges"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_STANDING_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NSTANDING_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                   Arrows="false"     R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_LWBPCharges"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_LWBP_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NLWBP_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_WBPCharges"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_WBP_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NWBP_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_TransfFee"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_TRANSFORMATOR_FEE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NTRANSFORMATOR_FEE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>/ @(_localizer["_KVA"])</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_CheckBox @bind-Value="@_viewModel.Data.LUSAGE_MIN_CHARGE"
                            R_ConductorSource="@_RateUC_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_UsageMinCharges"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NUSAGE_MIN_CHARGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" Enabled="@_viewModel.Data.LUSAGE_MIN_CHARGE">
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_Label Class="fw-bold">@_localizer["_Hours"]</R_Label>
                <R_Label>@_localizer["_HoursDesc"]</R_Label>
            </R_ItemLayout>

        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_KWHUsedMax"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NKWH_USED_MAX"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_Label> / @(_localizer["_KWH"])</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_KWUsedRate"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NKWH_USED_RATE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_KWH_USED_RATE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_KWAUsedRate"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NKWA_USED_RATE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_KWA_USED_RATE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_KVARange"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_KVA_RANGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>

            <R_ItemLayout col="4">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NKVA_RANGE"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

    </R_ItemLayout>

    <R_ItemLayout col="6">
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_Retri"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NRETRIBUTION_PCT"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Min="0" Max="100"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
            <R_ItemLayout col="1">
                <R_Label>%</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="3">
                <R_CheckBox @bind-Value="@_viewModel.Data.LRETRIBUTION_EXCLUDED_VAT"
                            R_ConductorSource="@_RateUC_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["ExcludeVa"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="11" Class="border p-2">
                <R_StackLayout Row>
                    <R_ItemLayout col="9">
                        <R_Label>@_localizer["_AdminFee"]</R_Label>
                        <R_Label>@_localizer["_PerMonth"]</R_Label>
                    </R_ItemLayout>
                    
                </R_StackLayout>
                <R_StackLayout Row="true">
                    <R_ItemLayout Style="width:170px">
                        <R_RadioGroup Data="@_Universal_viewModel.AdminFeeTypeList"
                                      Value="@_viewModel.Data.CADMIN_FEE"
                                      Layout="R_eRadioGroupLayout.Vertical"
                                      ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                                      TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                                      R_ConductorSource="@_RateUC_conductorRef" R_EnableEdit ValueChanged="@((string value) => RateUc_Admin_OnChange(value))">
                        </R_RadioGroup>
                        </R_ItemLayout>
                        <R_ItemLayout col="3">
                        <R_StackLayout Row>
                            <R_ItemLayout><R_Label></R_Label></R_ItemLayout>
                        </R_StackLayout>
                        <R_StackLayout Row>
                            <R_ItemLayout col="12">
                                <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_AMT"
                                                  R_ConductorSource="@_RateUC_conductorRef"
                                                  Min="0" Max="100"
                                                  Arrows="false" Enabled="@AdminFeePctEnable">
                                </R_NumericTextBox>
                            </R_ItemLayout>
                        </R_StackLayout>
                        <R_StackLayout Row>
                            <R_ItemLayout col="11">
                                <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_PCT"
                                                  R_ConductorSource="@_RateUC_conductorRef"
                                                  Min="0" Max="100"
                                                  Arrows="false" Enabled="@AdminFeeAmtEnable">
                                </R_NumericTextBox>
                            </R_ItemLayout>
                            <R_ItemLayout col="1">
                                <R_Label>%</R_Label>
                            </R_ItemLayout>
                        </R_StackLayout>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="3">
                        <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_TAX"
                                    R_ConductorSource="@_RateUC_conductorRef"
                                    R_EnableEdit>
                        </R_CheckBox>
                        <R_Label>@_localizer["_Taxable"]</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>
        
        <R_StackLayout Row>
            <R_ItemLayout col="4">
                <R_Label>@_localizer["_OtherDisFac"]</R_Label>
            </R_ItemLayout>

            <R_ItemLayout col="3">
                <R_NumericTextBox @bind-Value="@_viewModel.Data.NOTHER_DISINCENTIVE_FACTOR"
                                  R_ConductorSource="@_RateUC_conductorRef"
                                  Arrows="false" R_EnableEdit>
                </R_NumericTextBox>
            </R_ItemLayout>
        </R_StackLayout>

    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
</R_StackLayout>

<R_StackLayout Row>
    <R_Grid @ref="@_RateUCDetail_gridRef"
            DataSource="@_viewModel.RateUCDetailList"
            Pageable
            R_ConductorGridSource="@_RateUCDetail_conductorRef"
            R_GridType="@R_eGridType.Batch"
            AllowAddNewRow="@EnableEditGrid"
            AllowEditRow="@EnableEditGrid"
            AllowDeleteRow="@EnableEditGrid"
            PageSize="5"
            R_ServiceGetListRecord="@RateUC_ServiceGetListRecord" Height="150px">
        <R_GridColumns>
            <R_GridNumericColumn FieldName="IUP_TO_USAGE" HeaderText="@_localizer["_UsageKwh"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridTextColumn FieldName="CUSAGE_DESC" HeaderText="@_localizer["_Desc"]" R_EnableAdd R_EnableEdit></R_GridTextColumn>
            <R_GridNumericColumn FieldName="NBUY_LWBP_CHARGE" Arrows="false" Decimals="2" HeaderText="@_localizer["_LWBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridNumericColumn FieldName="NBUY_WBP_CHARGE" Arrows="false" HeaderText="@_localizer["_WBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridNumericColumn FieldName="NLWBP_CHARGE" Arrows="false" HeaderText="@_localizer["_LWBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
            <R_GridNumericColumn FieldName="NWBP_CHARGE" Arrows="false" HeaderText="@_localizer["_WBPCharges"]" R_EnableAdd R_EnableEdit></R_GridNumericColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-between mt-2">
    <R_ItemLayout>
        <R_EditButton R_Conductor="@_RateUC_conductorRef"></R_EditButton>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button OnClick="@Button_OnClickPrintAsync" Enabled="@PrintBtnEnable" R_ConductorSource="@_RateUC_conductorRef">@_localizer["_PrintBtn"]</R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_CancelButton R_Conductor="@_RateUC_conductorRef"></R_CancelButton>
        <R_SaveButton R_Conductor="@_RateUC_conductorRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>

<R_Conductor @ref="@_RateUC_conductorRef"
             R_ViewModel="@_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@RateUC_ServiceGetRecord"
             R_SetHasData="@RateUC_SetHasData"
             R_ServiceSave="@RateUC_ServiceSave"
             R_SetEdit="@RateUC_SetEdit"
             R_AfterSave="@RateUC_AfterSave"
             R_BeforeEdit="@RateUC_BeforeEdit"
             R_BeforeCancel="@RateUC_BeforeCancel"
             R_SetOther="@Grid_R_SetOther"
             R_Validation="@RateUC_Validation"
             R_Display="@RateUC_Display">
</R_Conductor>

<R_ConductorGrid @ref="@_RateUCDetail_conductorRef"
             R_ViewModel="@_viewModel"
             R_ConductorParent="@_RateUC_conductorRef"
             R_ServiceGetRecord="@RateUCDetail_ServiceGetRecord"
             R_Saving="@RateUCDetail_Saving"
             R_AfterSave="@RateUCDetail_AfterSave"
             R_ServiceSaveBatch="@RateUCDetail_ServiceSaveBatch"
             >
</R_ConductorGrid>
