@inherits R_Page
@using GSM07000COMMON.DTOs
@attribute [R_Page(Title = "User List")]

<R_StackLayout Style="width:800px">
    <R_StackLayout Row>
        <R_ItemLayout xs="12">
            <R_Grid @ref="@_gridUserRef"
                    DataSource="loUserViewModel.loUserList"
                    R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                    Pageable
                    Height="300px"
                    PageSize="5">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(GSM07010UserDTO.CUSER_ID)" HeaderText="User Id"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM07010UserDTO.CUSER_NAME)" HeaderText="User Name"></R_GridTextColumn>
                </R_GridColumns>
            </R_Grid>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout xs="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>