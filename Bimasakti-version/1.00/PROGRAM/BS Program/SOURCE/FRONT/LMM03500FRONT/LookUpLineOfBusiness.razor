@inherits R_Page
@using LMM03500COMMON.DTOs.LMM03502
@attribute [R_Page(Title = "Line Of Business")]

<R_StackLayout Style="width:600px">
    <R_StackLayout Row>
        <R_Grid @ref="@_gridRef"
                DataSource="@loViewModel.loLineOfBusinessList"
                R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                Pageable
                Height="300px"
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="@nameof(GetLineOfBusinessDTO.CLOB_CODE)" HeaderText="Id"></R_GridTextColumn>
                <R_GridTextColumn FieldName="@nameof(GetLineOfBusinessDTO.CLOB_NAME)" HeaderText="Name"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout col="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>