@inherits R_Page
@using LMM01000COMMON
@inject R_ILocalizer<LMM01000FrontResources.Resources_Dummy_Class> _localizer

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_UtilityChargesId"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_ID"
                   R_ConductorSource="@_RatePG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
    <R_ItemLayout col="5">
        <R_TextBox @bind-Value="@_viewModel.Data.CCHARGES_NAME"
                   R_ConductorSource="@_RatePG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_CurrCode"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_TextBox @bind-Value="@_viewModel.Data.CCURENCY_CODE"
                   R_ConductorSource="@_RatePG_conductorRef"
                   Enabled="false">
        </R_TextBox>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label FontColor="@R_eFontColor.Danger" Class="fw-bold">@_localizer["_Charges"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="3" Class="bg-success text-center fw-bold">
        <R_Label Class="text-light">@_localizer["_Buying"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="3" Class="bg-danger text-center fw-bold">
        <R_Label Class="text-light">@_localizer["_Selling"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_StandCharges"]</R_Label>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_NumericTextBox @ref="@StandingCharges_NumericTextBox"
                          @bind-Value="@_viewModel.Data.NBUY_STANDING_CHARGE"
                          R_ConductorSource="@_RatePG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>
    <R_ItemLayout col="3">
        <R_NumericTextBox @bind-Value="@_viewModel.Data.NSTANDING_CHARGE"
                          R_ConductorSource="@_RatePG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>
</R_StackLayout>


<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_UsageChargesRate"]</R_Label>
        <R_Label>@_localizer["_PerMonth"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="3">
        <R_NumericTextBox @bind-Value="@_viewModel.Data.NBUY_USAGE_CHARGE_RATE"
                          R_ConductorSource="@_RatePG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>

    <R_ItemLayout col="3">
        <R_NumericTextBox @bind-Value="@_viewModel.Data.NUSAGE_CHARGE_RATE"
                          R_ConductorSource="@_RatePG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>
</R_StackLayout>


<R_StackLayout Row>
    <R_ItemLayout col="3">
        <R_Label>@_localizer["_MaintenanceFee"]</R_Label>
        <R_Label>@_localizer["_PerMonth"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="3">
        <R_NumericTextBox @bind-Value="@_viewModel.Data.NMAINTENANCE_FEE"
                          R_ConductorSource="@_RatePG_conductorRef"
                          Arrows="false" R_EnableEdit>
        </R_NumericTextBox>
    </R_ItemLayout>

</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="11" Class="border p-2">
        <R_StackLayout Row="true">
            <R_ItemLayout col="3">
                <R_Label>@_localizer["_AdminFeePerMont"]</R_Label>
            </R_ItemLayout>
            <R_ItemLayout col="2">
                <R_StackLayout Row>
                    <R_ItemLayout col="10">
                        <R_RadioGroup Data="@_Universal_viewModel.AdminFeeTypeList"
                                      Value="@_viewModel.Data.CADMIN_FEE"
                                      Layout="R_eRadioGroupLayout.Vertical"
                                      ValueField="@nameof(LMM01000UniversalDTO.CCODE)"
                                      TextField="@nameof(LMM01000UniversalDTO.CDESCRIPTION)"
                                      R_ConductorSource="@_RatePG_conductorRef" R_EnableEdit ValueChanged="@((string value) => RatePG_Admin_OnChange(value))">
                        </R_RadioGroup>
                        </R_ItemLayout>
                        </R_StackLayout>
                        </R_ItemLayout>
                        <R_ItemLayout col="4">
                        <R_StackLayout Row>
                    <R_ItemLayout><R_Label></R_Label></R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="6">
                        <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_PCT"
                                          R_ConductorSource="@_RatePG_conductorRef"
                                          Min="0" Max="100"
                                          Arrows="false" Enabled="@AdminFeePctEnable">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                </R_StackLayout>
                <R_StackLayout Row>
                    <R_ItemLayout col="5">
                        <R_NumericTextBox @bind-Value="@_viewModel.Data.NADMIN_FEE_AMT"
                                          R_ConductorSource="@_RatePG_conductorRef"
                                          Min="0" Max="100"
                                          Arrows="false" Enabled="@AdminFeeAmtEnable">
                        </R_NumericTextBox>
                    </R_ItemLayout>
                    <R_ItemLayout col="1">
                        <R_Label>%</R_Label>
                    </R_ItemLayout>
                </R_StackLayout>
            </R_ItemLayout>
        </R_StackLayout>

        <R_StackLayout Row>
            <R_ItemLayout col="1">
                <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_TAX"
                            R_ConductorSource="@_RatePG_conductorRef"
                            R_EnableEdit>
                </R_CheckBox>
                <R_Label>@_localizer["_Taxable"]</R_Label>
            </R_ItemLayout>
        </R_StackLayout>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="3" >
        <R_Label>@_localizer["_AdminFeeFor"]</R_Label>
    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_SC"
                    R_ConductorSource="@_RatePG_conductorRef"
                    R_EnableEdit>
        </R_CheckBox>
        <R_Label>@_localizer["_StandCharges"]</R_Label>

    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_USAGE"
                    R_ConductorSource="@_RatePG_conductorRef"
                    R_EnableEdit>
        </R_CheckBox>
        <R_Label>@_localizer["_Usage"]</R_Label>

    </R_ItemLayout>

    <R_ItemLayout col="2">
        <R_CheckBox @bind-Value="@_viewModel.Data.LADMIN_FEE_MAINTENANCE"
                    R_ConductorSource="@_RatePG_conductorRef"
                    R_EnableEdit>
        </R_CheckBox>
        <R_Label>@_localizer["_Maintainance"]</R_Label>

    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="justify-content-between mt-2">
    <R_ItemLayout>
        <R_EditButton R_Conductor="@_RatePG_conductorRef"></R_EditButton>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_Button OnClick="@Button_OnClickPrintAsync" Enabled="@PrintBtnEnable" R_ConductorSource="@_RatePG_conductorRef">@_localizer["_PrintBtn"]</R_Button>
    </R_ItemLayout>
    <R_ItemLayout>
        <R_CancelButton R_Conductor="@_RatePG_conductorRef"></R_CancelButton>
        <R_SaveButton R_Conductor="@_RatePG_conductorRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>

<R_Conductor @ref="@_RatePG_conductorRef"
             R_ViewModel="@_viewModel"
             R_IsHeader="true"
             R_ServiceGetRecord="@RatePG_ServiceGetRecord"
             R_SetHasData="@RatePG_SetHasData"
             R_ServiceSave="@RatePG_ServiceSave"
             R_BeforeCancel="@RatePG_BeforeCancel"
             R_AfterSave="@RatePG_AfterSave"
             R_SetOther="@Grid_R_SetOther"
             R_Display="@RatePG_Display"
             >
</R_Conductor>
