@page "/GLB09900"
@inherits R_Page
@attribute [R_Page(Title = "Close GL Period")]
@inject R_ILocalizer<GLB09900FrontResources.Resources_Dummy_Class> _localizer


<R_StackLayout Row Class="justify-content-center">
    <R_ItemLayout col="2"> <R_Label FontSize="16">@_localizer["_CurrentPeriod"]</R_Label></R_ItemLayout>
    <R_ItemLayout col="2"> <R_Label FontSize="16" FontColor="@R_eFontColor.Danger">@_CloseGLPeriod_viewModel.SystemParam.CURRENT_PERIOD_DISPLAY</R_Label></R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row ><R_ItemLayout col="2"> <R_Label></R_Label></R_ItemLayout></R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="12">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">@_localizer["_Desc1ClosePeriod"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="11">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">@_localizer["_Desc2ClosePeriod"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row><R_ItemLayout col="2"> <R_Label FontColor="@R_eFontColor.Danger"></R_Label></R_ItemLayout></R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="11">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">@_localizer["_Desc3ClosePeriod"]</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="mt-2 justify-content-center">
    <R_ItemLayout>
        <R_Button OnClick="@Button_OnClickPeriodEndAsync" FontSize="16">@_localizer["_ProcessBtn"]</R_Button>
        <R_Button OnClick="@Button_OnClickCloseAsync" FontSize="16">@_localizer["_CancelBtn"]</R_Button>

    </R_ItemLayout>
</R_StackLayout>