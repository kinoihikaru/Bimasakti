@inherits R_Page
@using LMM03500COMMON
@using LMM03500MODEL

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tenant12345</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CTENANT_ID"
                       R_ConductorSource="@_conductorBillingRef" Enabled=false></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CTENANT_NAME"
                       R_ConductorSource="@_conductorBillingRef" Enabled=false></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="1">
            <R_CheckBox @bind-Value="@loBillingViewModel.Data.LBILLING_OVERWRITE"
                        R_ConductorSource="@_conductorBillingRef"
                        R_EnableEdit>
            </R_CheckBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>Overwrite</R_Label>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Billing To*</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_TO"
                        R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Address*</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="8">
            <R_TextArea @bind-Value="@loBillingViewModel.Data.CBILLING_ADDRESS"
                        R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextArea>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Phone No (1)</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_PHONE1"
                       R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Label>Phone No (2)</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_PHONE2"
                       R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Email</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_EMAIL"
                       R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Attention name</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_ATTENTION_NAME"
                       R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Label>Position</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loBillingViewModel.Data.CBILLING_ATTENTION_POSITION"
                       R_ConductorSource="@_conductorBillingRef" R_EnableEdit></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_StackLayout Row Class="mt-3">
    <R_ItemLayout col="2">
        <R_EditButton R_Conductor="@_conductorBillingRef" Enabled="@IsEnabled"></R_EditButton>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_CancelButton R_Conductor="@_conductorBillingRef"></R_CancelButton>
    </R_ItemLayout>
    <R_ItemLayout col="2">
        <R_SaveButton R_Conductor="@_conductorBillingRef"></R_SaveButton>
    </R_ItemLayout>
</R_StackLayout>


<R_Conductor @ref="_conductorBillingRef"
             R_ViewModel="loBillingViewModel"
             R_IsHeader
             R_ServiceGetRecord="GetBillingAsync"
             R_BeforeCancel="BeforeCancelBilling"
             R_BeforeEdit="BeforeEditBilling"
             R_AfterSave="AfterSaveBilling"
             R_Saving="@SavingBilling"
             R_SetOther="Billing_SetOther"
             R_ServiceSave="ServiceSaveBilling">
</R_Conductor>