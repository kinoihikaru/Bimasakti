@inherits R_Page
@using LMM03500COMMON.DTOs.LMM03500
@using LMM03500COMMON.DTOs.LMM03503
@using LMM03500COMMON.DTOs
@using LMM03500COMMON
@using LMM03500MODEL

<R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tenant</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTENANT_ID"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="5">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTENANT_NAME"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tax Type</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_ComboBox @bind-Value="loTaxInfoViewModel.Data.CTAX_TYPE"
                        Data="loTaxInfoViewModel.loTaxTypeList"
                        R_ConductorSource="@_conductorTaxInfoRef"
                        R_EnableAdd
                        R_EnableEdit
                        ValueField="@nameof(GetLMM03503ListDTO.CCODE)"
                        TextField="@nameof(GetLMM03503ListDTO.CDESCRIPTION)"></R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="6">
            <R_CheckBox @bind-Value="@loTaxInfoViewModel.Data.LPPH"
                        R_ConductorSource="@_conductorTaxInfoRef"
                        R_EnableAdd="true" R_EnableEdit="true"></R_CheckBox>
            <R_Label>
                Receipt Payment with Withholding Tax(PPh) Deduction
            </R_Label>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tax Id</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTAX_ID"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tax Name</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTAX_NAME"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>ID Number</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CID_NO"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>ID Type</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_ComboBox @bind-Value="loTaxInfoViewModel.Data.CID_TYPE"
                        Data="loTaxInfoViewModel.loIdTypeList"
                        R_ConductorSource="@_conductorTaxInfoRef"
                        R_EnableAdd
                        R_EnableEdit
                        ValueField="@nameof(GetLMM03503ListDTO.CCODE)"
                        TextField="@nameof(GetLMM03503ListDTO.CDESCRIPTION)"></R_ComboBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>ID Expired Date</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CID_EXPIRED_DATE"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Tax Code</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_ComboBox @bind-Value="loTaxInfoViewModel.Data.CTAX_CODE"
                        Data="loTaxInfoViewModel.loTaxCodeList"
                        R_ConductorSource="@_conductorTaxInfoRef"
                        R_EnableAdd
                        R_EnableEdit
                        ValueField="@nameof(GetLMM03503ListDTO.CCODE)"
                        TextField="@nameof(GetLMM03503ListDTO.CDESCRIPTION)"></R_ComboBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Label>Limit Amount</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="3">
            <R_NumericTextBox @bind-Value="@loTaxInfoViewModel.Data.NTAX_CODE_LIMIT_AMOUNT"
                              R_ConductorSource="@_conductorTaxInfoRef"
                              R_EnableAdd="true" R_EnableEdit="true"></R_NumericTextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Address</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextArea @bind-Value="@loTaxInfoViewModel.Data.CTAX_ADDRESS"
                        R_ConductorSource="@_conductorTaxInfoRef"
                        R_EnableAdd="true" R_EnableEdit="true"></R_TextArea>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Phone No(1)</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTAX_PHONE1"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Label>Phone No(2)</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTAX_PHONE2"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row>
        <R_ItemLayout col="2">
            <R_Label>Email</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="10">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CTAX_EMAIL"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       R_EnableAdd="true" R_EnableEdit="true"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row="true">
        <R_ItemLayout col="2">
            <R_Label>Updated By</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CUPDATE_BY"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>Date</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_DateTimePicker @bind-Value="@loTaxInfoViewModel.Data.DUPDATE_DATE"
                              R_ConductorSource="@_conductorTaxInfoRef"
                              Enabled="false"></R_DateTimePicker>
        </R_ItemLayout>
    </R_StackLayout>

    <R_StackLayout Row="true">
        <R_ItemLayout col="2">
            <R_Label>Created By</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_TextBox @bind-Value="@loTaxInfoViewModel.Data.CCREATE_BY"
                       R_ConductorSource="@_conductorTaxInfoRef"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="1">
        </R_ItemLayout>
        <R_ItemLayout col="1">
            <R_Label>Date</R_Label>
        </R_ItemLayout>
        <R_ItemLayout col="4">
            <R_DateTimePicker @bind-Value="@loTaxInfoViewModel.Data.DCREATE_DATE"
                              R_ConductorSource="@_conductorTaxInfoRef"
                              Enabled="false"></R_DateTimePicker>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>

<R_Conductor @ref="@_conductorTaxInfoRef"
             R_IsHeader
             R_ViewModel="@loTaxInfoViewModel"
             R_ServiceGetRecord="@TaxInfo_GetTaxInfoRecord"
             R_ServiceSave="TaxInfo_ServiceSave"
             R_Saving="@TaxInfo_Saving">
</R_Conductor>